<!-- login.ejs -->
<%- include('templates/head') %>
    <!--<%- include('templates/nav') %>-->
    <nav class="navbar">
        <div class="nav-left">
            <div class="nav-element">
                <h2 class="nav-h">
                    <a href="/"> SKLEP </a>
                </h2>
            </div>
        </div>
        <div class="nav-mid">
            <div class="nav-element">

                <h2 class="nav-h">
                    <a href="/"> Produkty </a>
                </h2>

            </div>
            <div class="nav-element">

                <h2 class="nav-h">
                    <a href="/"> Szukaj </a>
                </h2>

            </div>
        </div>
        <div class="nav-right">
            <% if ( locals.user ) { %>
                <div class="nav-element">
                    <div id='cart'>
                        <h2 class="nav-h">
                            <a href="/cart"> Koszyk </a>
                        </h2>
                    </div>

                </div>
                <div class="nav-element">
                    <h2 class="nav-h">
                        <a href="/logged"> Konto </a>
                    </h2>
                </div>
                <% } else {%>

                    <div class="nav-element">
                        <h2 class="nav-h" id="active">
                            <a href="/login"> Logowanie </a>
                        </h2>
                    </div>
                    <% } %>
        </div>
    </nav>

    <body>
        <div class="login-wrap">
            <form method="POST">
                <div id='login'>
                    <div class="form-field">
                        <input class="form-input" type='text' name='txtUser' placeholder="Nazwa użytkownika" />
                    </div>
                    <div class="form-field">
                        <input class="form-input" type='password' name='txtPwd' placeholder="Hasło" />
                    </div>
                    <div>
                        <button class="login-btn">Zaloguj się</button>
                    </div>
                    <% if ( locals.message ) { %>
                        <div class='incorrect-login-message'>
                            <%= locals.message %>
                        </div>
                        <% } %>
                </div>
            </form>
            <form action="/createAccount">
                <div id='createAccount'>
                    <div>
                        <button class="login-btn">Stwórz konto</button>
                    </div>
                </div>
            </form>
        </div>
    </body>

    </html>