<!-- account.ejs -->
<%- include('templates/head') %>
    <%- include('templates/nav', {url: url, cart_item_count}) %>

        <body>
            <div class="body-wrap">
                <h2 class="title">
                    Witaj <%= user.name %>
                </h2>
                <form method="POST">
                    <button class="logout-btn"> Wyloguj</button>
                </form>

                <div class="account-container">
                    <h2> Twoje zamówienia: </h2>
                    <% orders.forEach( order=> { %>
                        <div class="order">
                            <div cless="order-id">
                                #<%= order.id %>
                            </div>
                            <div class="order-products">
                                <% order.products.forEach( product=> { %>
                                    <div class="order-product">
                                        <p>
                                            <%= product.name %>
                                        </p>
                                        <p>
                                            x<%= product.qt %>
                                        </p>
                                        <p>
                                            <%= product.price * product.qt %>zł
                                        </p>
                                    </div>
                                    <%}) %>
                                        <p class="order-total">
                                            <%= order.totalCost %>zł
                                        </p>
                            </div>
                        </div>
                        <% }); %>
                </div>
        </body>

        </html>