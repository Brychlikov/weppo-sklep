<%- include('templates/head', {page_title: 'Koszyk' }) %>
    <%- include('templates/nav', {url: url, cart_item_count: cart_item_count}) %>

        <body>

            <div class="cart-container">
                <% if (!products.length) { %>
                    <h2 class="title">
                        Twój koszyk jest pusty
                    </h2>
                    <% } else { %>
                        <h2 class="title">
                            Zawartość koszyka
                        </h2>
                        <% products.forEach( product=> { %>
                            <div class="cart-item">
                                <a class="cart-image" href="/products/<%= product.id %>">
                                    <img src='<%= product.img_url %>' alt=<%=product.name %> >
                                </a>
                                <div class="cart-info">
                                    <h2>
                                        <a href="/products/<%= product.id %>">
                                            <%= product.name %>
                                        </a>
                                    </h2>
                                    <div class="product-price">
                                        <%= product.price %>zł
                                    </div>

                                </div>
                                <div class="cart-info">
                                    <div class="cart-quantity">
                                        Ilość: <%= product.qt %>

                                    </div>
                                    <div class="cart-quantity">
                                        Razem: <%= product.price * product.qt %>zł
                                    </div>

                                    <div class="cart-remove">
                                        <form method="POST">
                                            <button class="cart-remove" name="remove_button_id"
                                                value="<%= product.id%>">
                                                Usuń </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <% }); %>
                                <div class="cart-summary">
                                    <div class="cart-total">
                                        <p>SUMA: </p>
                                        <h2>
                                            <%= locals.sum %>zł
                                        </h2>
                                    </div>
                                    <form action="/checkout">
                                        <button class="checkout-btn" name=""> Do kasy > </button>
                                    </form>
                                </div>
            </div>
            <% } %>
        </body>

        </html>